#!/bin/zsh

if [ "$1" = "status" ]; then
  vcsh status
  exit
elif [[ "$1" = "push" ]]; then
  vcsh push
  exit
fi

if [ "$1" = "vc" ]; then
	repo=vc
else
	repo=vc_$1
fi

shift

# vcsh run $repo git $@
vcsh run $repo $@

# if [ "$1" = "add" -a "$2" = "-f" ]; then
if [ "$2" = "add" -a "$3" = "-f" ]; then
	vcsh write-gitignore $repo
	vcsh run $repo git add ~/.gitignore.d/$repo
fi
