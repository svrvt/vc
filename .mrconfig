[DEFAULT]
git_gc = git gc "$@"
jobs = 5

include = 
	cat $HOME/.config/mr/available.d/vc.vcsh
	if [ -d $HOME/.config/mr/config.d-$HOSTNAME ]; then
		for conf in $HOME/.config/mr/config.d-$HOSTNAME/*; do
			test -x $conf && $conf || cat $conf
		done
  else
		for conf in $HOME/.config/mr/config.d/*; do
			cat $conf
		done
	fi

[ALIAS]

