[DEFAULT]
git_gc = git gc "$@"
jobs = 5

lite="vps vaio-p"
hard="vaio aldebaran"

include =
    if [ -d $HOME/.config/mr/config.d-$HOSTNAME ]; then
        for conf in $HOME/.config/mr/config.d-$HOSTNAME/*; do
            test -x $conf && $conf || cat $conf
        done
    else
        mkdir -p $HOME/.config/mr/config.d-$HOSTNAME
        "$HOME/bin/link_mr"
    fi

[ALIAS]

